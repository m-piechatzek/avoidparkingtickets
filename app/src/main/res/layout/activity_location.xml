<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_location"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.monikapiechatzek.avoidparkingtickets.LocationFinder"
    android:orientation="vertical"
    android:background="@drawable/generic_map">

        <TextView
            android:text="User!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/greeting" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ticketter_des"
            android:id="@+id/Ticketter_btn_des"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="50dp"/>

        <Button
            android:text="@string/ticketter_spotted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ticketter_spotted_btn"
            android:layout_marginTop="5dp"/>

        <TextView
            android:text="@string/user_checkin_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/user_checkin_des"
            android:textAlignment="center"
            android:layout_marginTop="50dp"/>

        <Button
            android:text="@string/user_checkin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/check_in_btn"
            android:layout_marginTop="5dp"/>

        <TextView
            android:text="LocationTesting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/location"
            android:textAlignment="center"
            android:layout_marginTop="50dp"/>

        <Button
            android:text="Log Out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/logout" />
</LinearLayout>


